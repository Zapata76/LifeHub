RewriteEngine On

# Prevent directory listing
Options -Indexes

# Default file for the directory
DirectoryIndex index.html index.php

# For any request that is not a real file (like api/auth.php)
# or a real directory, fallback to index.html to let Angular handle client-side routing.
# This rule works regardless of the subfolder the app is installed in.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]
