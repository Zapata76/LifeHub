RewriteEngine On

# Se il file esiste fisicamente, servilo direttamente (per asset Angular e icone PWA)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Se l'utente accede alla cartella /tasks/ servi index.php per controllo login
DirectoryIndex index.php index.html

# Se la richiesta non Ã¨ un file reale, servi index.php (routing Angular SPA)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]
